@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập | Hệ thống quản lý nhân viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/login.css">

</head>
<body>
    <div class="container login-container">
        <div class="row g-0">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="form-section">
                        <div class="d-flex justify-content-center mb-4 d-lg-none">
                            <div class="company-logo">
                                <i class="fas fa-building"></i> COMPANY
                            </div>
                        </div>
                        
                        <h2 class="form-title text-center">Đăng nhập hệ thống</h2>
                        
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        
                        <form asp-action="Login" method="post">
                            <div class="input-group mb-4">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập">
                            </div>
                            <span asp-validation-for="Username" class="text-danger d-block mb-3"></span>
                            
                            <div class="input-group mb-4">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu">
                            </div>
                            <span asp-validation-for="Password" class="text-danger d-block mb-3"></span>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input">
                                    <label asp-for="RememberMe" class="form-check-label">Nhớ đăng nhập</label>
                                </div>
                                <a href="#" class="text-decoration-none">Quên mật khẩu?</a>
                            </div>
                            
                            <button type="submit" class="btn btn-primary login-btn w-100 mb-4">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                            </button>
                            
                            <div class="text-center">
                                <small class="text-muted">© 2025 Company. Tất cả quyền được bảo lưu.</small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 d-none d-lg-block">
                <div class="card h-100">
                    <div class="company-section">
                        <div class="company-logo">
                            <i class="fas fa-building"></i> COMPANY
                        </div>
                        
                        <h3 class="mb-4">Hệ thống quản lý nhân viên</h3>
                        
                        <p class="mb-5">Chào mừng bạn quay trở lại hệ thống. Vui lòng đăng nhập để truy cập vào tài khoản và quản lý công việc của bạn.</p>
                        
                        <div class="features mt-4">
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div>Bảo mật cao</div>
                            </div>
                            
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div>Quản lý hiệu quả</div>
                            </div>
                            
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-sync-alt"></i>
                                </div>
                                <div>Đồng bộ dữ liệu</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>