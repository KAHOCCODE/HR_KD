            console.error('Rejected records table body not found');
            return;
        }
        tbody.innerHTML = '<tr><td colspan="7" class="p-3 text-center">Đang tải...</td></tr>';
        try {
            const response = await fetch(`/api/Attendance/GetRejectedRecords`);
            if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
            const result = await response.json();
            tbody.innerHTML = '';
