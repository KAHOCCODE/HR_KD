```cshtml
@model HR_KD.ViewModels.CauHinhPhepNamViewModel
@{
    ViewData["Title"] = "Chi tiết cấu hình phép năm";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Header with breadcrumb -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/QuanLyNghi">Quản lý nghỉ phép</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Cấu hình phép năm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                </ol>
            </nav>
            <div class="d-flex align-items-center mt-2">
                <h2 class="fw-bold text-primary mb-0">Chi tiết cấu hình phép năm @Model.Nam</h2>
                @if (Model.IsCurrentYear)
                {
                    <span class="badge ms-3 bg-info fs-6" style="padding: 0.5em 1em;">
                        <i class="fas fa-lock me-1"></i> Đang áp dụng
                    </span>
                }
            </div>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center">
                <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white py-3 border-bottom border-light">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin cấu hình
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row gx-5">
                        <div class="col-lg-6">
                            <div class="detail-item mb-4">
                                <div class="detail-label">Năm áp dụng</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Nam)</div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="detail-item mb-4">
                                <div class="detail-label">Số ngày phép mặc định</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.SoNgayPhepMacDinh) ngày</div>
                                <div class="detail-hint">Số ngày phép cơ bản mà mỗi nhân viên được hưởng</div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5 class="fw-bold">Chính sách phép năm áp dụng</h5>
                        <div class="table-responsive mt-3">
                            <table class="table table-hover table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tên chính sách</th>
                                        <th>Số năm làm việc</th>
                                        <th>Số ngày cộng thêm</th>
                                        <th>Năm bắt đầu áp dụng</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DanhSachChinhSach.Where(c => c.IsSelected))
                                    {
                                        <tr>
                                            <td>@item.TenChinhSach</td>
                                            <td>@item.SoNam năm</td>
                                            <td>@item.SoNgayCongThem ngày</td>
                                            <td>@item.ApDungTuNam</td>
                                            <td>
                                                <span class="badge @(item.ConHieuLuc ? "bg-success" : "bg-danger")">
                                                    @(item.ConHieuLuc ? "Còn hiệu lực" : "Hết hiệu lực")
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                    @if (!Model.DanhSachChinhSach.Any(c => c.IsSelected))
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center py-3">Không có chính sách nào được áp dụng</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @if (Model.IsCurrentYear)
                    {
                        <div class="policy-status-card mt-4 mb-4 in-use">
                            <div class="status-icon">
                                <i class="fas fa-lock text-info"></i>
                            </div>
                            <div class="status-content">
                                <div class="status-title">Trạng thái sử dụng</div>
                                <div class="status-value text-info">
                                    Cấu hình này đang được áp dụng cho năm hiện tại
                                </div>
                                <div class="status-note mt-1">
                                    <i class="fas fa-info-circle me-1"></i> Không thể chỉnh sửa hoặc xóa cấu hình đang được áp dụng
                                </div>
                            </div>
                        </div>
                    }

                    <hr class="my-4" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-2"></i> Danh sách
                        </a>
                        @if (!Model.IsCurrentYear)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 d-flex align-items-center">
                                <i class="fas fa-edit me-2"></i> Chỉnh sửa
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary px-4 d-flex align-items-center" disabled
                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Không thể chỉnh sửa cấu hình của năm hiện tại">
                                <i class="fas fa-lock me-2"></i> Chỉnh sửa
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Card styling */
        .card {
            transition: all 0.2s ease;
        }

        /* Detail item styling */
        .detail-item {
            position: relative;
        }

        .detail-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .detail-value {
            font-size: 1.25rem;
            font-weight: 500;
            color: #212529;
            padding-bottom: 0.25rem;
        }

        .detail-hint {
            font-size: 0.75rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }

        /* Status card styling */
        .policy-status-card {
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1.25rem;
            border-left: 4px solid;
        }

            .policy-status-card.active {
                border-left-color: #28a745;
                background-color: rgba(40, 167, 69, 0.08);
            }

            .policy-status-card.inactive {
                border-left-color: #dc3545;
                background-color: rgba(220, 53, 69, 0.08);
            }

            .policy-status-card.in-use {
                border-left-color: #17a2b8;
                background-color: rgba(23, 162, 184, 0.08);
            }

        .status-icon {
            font-size: 2rem;
            margin-right: 1rem;
        }

        .status-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: #495057;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.25rem;
        }

        .status-value {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .status-note {
            font-size: 0.85rem;
            color: #495057;
        }

        /* Badge and text color styling */
        .badge.bg-success {
            background-color: #28a745 !important;
            color: white;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
            color: white;
        }

        .badge.bg-info {
            background-color: #17a2b8 !important;
            color: white;
        }

        .text-success {
            color: #28a745 !important;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .text-info {
            color: #17a2b8 !important;
        }

        .badge {
            padding: 0.5em 0.85em;
            font-weight: 500;
        }

        /* Button styling */
        .btn-primary {
            background-color: #3b7ddd;
            border-color: #3b7ddd;
        }

            .btn-primary:hover {
                background-color: #326abc;
                border-color: #2f64b1;
                transform: translateY(-1px);
                box-shadow: 0 4px 6px rgba(59, 125, 221, 0.2);
            }

        .btn-secondary {
            background-color: #adb5bd;
            border-color: #adb5bd;
        }

        .btn {
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        /* Colors */
        .text-primary {
            color: #3b7ddd !important;
        }

        /* Breadcrumb styling */
        .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
        }

            .breadcrumb-item a:hover {
                color: #3b7ddd;
                text-decoration: none;
            }

        .breadcrumb-item.active {
            color: #3b7ddd;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: #6c757d;
        }

        /* Table styling */
        .table {
            margin-bottom: 0;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(59, 125, 221, 0.05);
        }
    </style>
}

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}
