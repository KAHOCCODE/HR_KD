@model HR_KD.ViewModels.CauHinhPhepNamViewModel
@{
    ViewData["Title"] = "Chi tiết cấu hình phép năm";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="container mx-auto px-4 py-8 bg-gray-50 min-h-screen">
    <!-- Header Section with Breadcrumb -->
    <div class="mb-8">
        <nav aria-label="breadcrumb" class="flex items-center text-sm text-blue-600 mb-4">
            <ol class="flex space-x-2">
                <li><a href="/" class="hover:text-blue-800">Trang chủ</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li><a href="/QuanLyNghi" class="hover:text-blue-800">Quản lý nghỉ phép</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li><a asp-action="Index" class="hover:text-blue-800">Cấu hình phép năm</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li class="text-blue-900 font-medium">Chi tiết</li>
            </ol>
        </nav>
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <h2 class="text-3xl font-extrabold text-blue-900">
                    <svg class="w-6 h-6 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    Chi tiết cấu hình phép năm @Model.Nam
                </h2>
                @if (Model.IsCurrentYear)
                {
                    <span class="inline-flex px-3 py-1 ml-4 text-sm font-medium rounded-full bg-cyan-100 text-cyan-800">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                        Đang áp dụng
                    </span>
                }
            </div>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white text-blue-700 rounded-full hover:bg-blue-50 transition-all duration-300 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-blue-100 animate__animated animate__fadeIn">
        <div class="p-6 border-b border-blue-100">
            <h5 class="text-lg font-semibold text-blue-900">
                <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                Thông tin cấu hình
            </h5>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <dt class="text-sm font-semibold text-blue-900 uppercase">Năm áp dụng</dt>
                    <dd class="mt-2 text-xl font-medium text-blue-800">@Html.DisplayFor(model => model.Nam)</dd>
                </div>
                <div>
                    <dt class="text-sm font-semibold text-blue-900 uppercase">Số ngày phép mặc định</dt>
                    <dd class="mt-2 text-xl font-medium text-blue-800">@Html.DisplayFor(model => model.SoNgayPhepMacDinh) ngày</dd>
                    <p class="text-xs text-blue-600 mt-1">
                        <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Số ngày phép cơ bản mà mỗi nhân viên được hưởng
                    </p>
                </div>
            </div>

            <div class="mt-8">
                <h5 class="text-lg font-semibold text-blue-900 mb-4">
                    <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
                    Chính sách phép năm áp dụng
                </h5>
                <div class="overflow-x-auto">
                    <table class="w-full table-auto">
                        <thead class="bg-blue-50 text-blue-900">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Tên chính sách</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Số năm làm việc</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Số ngày cộng thêm</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Năm bắt đầu áp dụng</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-blue-100">
                            @foreach (var item in Model.DanhSachChinhSach.Where(c => c.IsSelected))
                            {
                                <tr class="hover:bg-blue-50 transition-all duration-200">
                                    <td class="px-6 py-4 text-blue-800">@item.TenChinhSach</td>
                                    <td class="px-6 py-4 text-blue-800">@item.SoNam năm</td>
                                    <td class="px-6 py-4 text-blue-800">@item.SoNgayCongThem ngày</td>
                                    <td class="px-6 py-4 text-blue-800">@item.ApDungTuNam</td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full @(item.ConHieuLuc ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                            @(item.ConHieuLuc ? "Còn hiệu lực" : "Hết hiệu lực")
                                        </span>
                                    </td>
                                </tr>
                            }
                            @if (!Model.DanhSachChinhSach.Any(c => c.IsSelected))
                            {
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-blue-600">
                                        <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        Không có chính sách nào được áp dụng
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.IsCurrentYear)
            {
                <div class="mt-6 p-5 bg-cyan-50 rounded-xl flex items-start space-x-4">
                    <svg class="w-8 h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                    <div>
                        <h6 class="text-sm font-semibold text-cyan-900 uppercase">Trạng thái sử dụng</h6>
                        <p class="text-cyan-800 font-medium">Cấu hình này đang được áp dụng cho năm hiện tại</p>
                        <p class="text-xs text-cyan-600 mt-1 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            Không thể chỉnh sửa hoặc xóa cấu hình đang được áp dụng
                        </p>
                    </div>
                </div>
            }

            <div class="flex justify-end space-x-4 mt-6">
                <a asp-action="Index" class="inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-all duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
                    Danh sách
                </a>
                @if (!Model.IsCurrentYear)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-md">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                        Chỉnh sửa
                    </a>
                }
                else
                {
                    <button type="button" disabled class="inline-flex items-center px-5 py-2.5 bg-gray-200 text-gray-400 rounded-full cursor-not-allowed" title="Không thể chỉnh sửa cấu hình của năm hiện tại">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                        Chỉnh sửa
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize tooltips
            document.querySelectorAll('[title]').forEach(element => {
                new bootstrap.Tooltip(element);
            });
        });
    </script>
}