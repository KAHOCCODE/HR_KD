@model HR_KD.ViewModels.CauHinhPhepNamViewModel

@{
    ViewData["Title"] = "Thêm mới cấu hình phép năm";
}

<div class="container-fluid">
    <h1 class="mt-4">Thêm mới cấu hình phép năm</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-plus mr-1"></i>
            Thông tin cấu hình
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Nam" class="col-sm-2 col-form-label">Năm:</label>
                    <div class="col-sm-4">
                        <input asp-for="Nam" class="form-control" />
                        <span asp-validation-for="Nam" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="SoNgayPhepMacDinh" class="col-sm-2 col-form-label">Số ngày phép mặc định:</label>
                    <div class="col-sm-4">
                        <input asp-for="SoNgayPhepMacDinh" class="form-control" />
                        <span asp-validation-for="SoNgayPhepMacDinh" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Chính sách áp dụng:</label>
                    <div class="table-responsive mt-2">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Chọn</th>
                                    <th>Tên chính sách</th>
                                    <th>Số năm</th>
                                    <th>Số ngày cộng thêm</th>
                                    <th>Áp dụng từ năm</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.DanhSachChinhSach.Count; i++)
                                {
                                    var chinhSach = Model.DanhSachChinhSach[i];
                                    <tr>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox"
                                                       class="custom-control-input"
                                                       id="chinhsach-@chinhSach.Id"
                                                       name="ChinhSachPhepNamIds"
                                                       value="@chinhSach.Id"
                                                @(chinhSach.IsSelected ? "checked" : "") />
                                                <label class="custom-control-label" for="chinhsach-@chinhSach.Id"></label>
                                            </div>
                                        </td>
                                        <td>@chinhSach.TenChinhSach</td>
                                        <td>@chinhSach.SoNam</td>
                                        <td>@chinhSach.SoNgayCongThem</td>
                                        <td>@chinhSach.ApDungTuNam</td>
                                        <td>
                                            @if (chinhSach.ConHieuLuc)
                                            {
                                                <span class="badge badge-success">Còn hiệu lực</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Hết hiệu lực</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Thêm mã JavaScript nếu cần
        });
    </script>
}