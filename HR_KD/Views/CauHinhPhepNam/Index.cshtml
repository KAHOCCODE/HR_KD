@model HR_KD.ViewModels.CauHinhPhepNamListViewModel
@{
    ViewData["Title"] = "Danh sách cấu hình phép năm";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="container mx-auto px-4 py-8 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="mb-8">
        <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-2xl shadow-lg p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h4 class="text-2xl font-extrabold">
                        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        Cấu hình phép năm
                    </h4>
                    <p class="text-blue-100 text-sm mt-1">Quản lý cấu hình phép năm cho nhân viên</p>
                </div>
                <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-white text-blue-700 rounded-full hover:bg-blue-50 transition-all duration-300 shadow-md">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                    Thêm mới
                </a>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Error"] != null)
    {
        <div class="p-4 bg-red-50 text-red-800 rounded-lg mb-6 alert animate__animated animate__fadeIn relative" role="alert">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            @TempData["Error"]
            <button type="button" class="absolute top-3 right-3 text-red-600 hover:text-red-800" data-bs-dismiss="alert" aria-label="Close">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="p-4 bg-yellow-50 text-yellow-800 rounded-lg mb-6 alert animate__animated animate__fadeIn relative" role="alert">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            @TempData["Warning"]
            <button type="button" class="absolute top-3 right-3 text-yellow-600 hover:text-yellow-800" data-bs-dismiss="alert" aria-label="Close">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="p-4 bg-green-50 text-green-800 rounded-lg mb-6 alert animate__animated animate__fadeIn relative" role="alert">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            @TempData["Success"]
            <button type="button" class="absolute top-3 right-3 text-green-600 hover:text-green-800" data-bs-dismiss="alert" aria-label="Close">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
            </button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-md p-5 flex items-center">
            <div class="flex-1">
                <h6 class="text-xs font-semibold text-blue-600 uppercase">Tổng cấu hình</h6>
                <p class="text-2xl font-bold text-blue-900">@Model.DanhSachCauHinh.Count()</p>
            </div>
            <svg class="w-12 h-12 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        </div>
        <div class="bg-white rounded-xl shadow-md p-5 flex items-center">
            <div class="flex-1">
                <h6 class="text-xs font-semibold text-green-600 uppercase">Năm hiện tại</h6>
                <p class="text-2xl font-bold text-blue-900">@DateTime.Now.Year</p>
            </div>
            <svg class="w-12 h-12 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <div class="bg-white rounded-xl shadow-md p-5 flex items-center">
            <div class="flex-1">
                <h6 class="text-xs font-semibold text-cyan-600 uppercase">Cấu hình hiện hành</h6>
                <p class="text-2xl font-bold text-blue-900">@(Model.DanhSachCauHinh.FirstOrDefault(c => c.Nam == DateTime.Now.Year)?.SoNgayPhepMacDinh ?? 0) ngày</p>
            </div>
            <svg class="w-12 h-12 text-cyan-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01m-.01 4h.01"></path></svg>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-blue-100 animate__animated animate__fadeIn">
        <div class="p-6 border-b border-blue-100">
            <h5 class="text-lg font-semibold text-blue-900">
                <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                Danh sách cấu hình phép năm
            </h5>
        </div>
        <div class="p-6">
            <div class="overflow-x-auto">
                <table class="w-full table-auto">
                    <thead class="bg-blue-50 text-blue-900">
                        <tr>
                            <th class="px-6 py-4 text-center text-sm font-semibold w-1/12">
                                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                Năm
                            </th>
                            <th class="px-6 py-4 text-center text-sm font-semibold w-2/12">
                                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                Số ngày phép mặc định
                            </th>
                            <th class="px-6 py-4 text-left text-sm font-semibold w-6/12">
                                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                Chính sách áp dụng
                            </th>
                            <th class="px-6 py-4 text-center text-sm font-semibold w-3/12">
                                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                                Thao tác
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-blue-100">
                        @foreach (var item in Model.DanhSachCauHinh)
                        {
                            bool isCurrentYear = item.Nam == DateTime.Now.Year;
                            <tr class="@(isCurrentYear ? "bg-blue-50" : "") hover:bg-blue-50 transition-all duration-200">
                                <td class="px-6 py-4 text-center text-blue-800 font-bold">
                                    @item.Nam
                                    @if (isCurrentYear)
                                    {
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 ml-2">Hiện tại</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="inline-flex px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-800">@item.SoNgayPhepMacDinh ngày</span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (item.DanhSachTenChinhSach != null && item.DanhSachTenChinhSach.Any())
                                    {
                                        <div class="flex flex-wrap gap-2">
                                            @foreach (var tenChinhSach in item.DanhSachTenChinhSach)
                                            {
                                                <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full bg-cyan-100 text-cyan-800">@tenChinhSach</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-blue-600 text-sm flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                            Không có chính sách
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex justify-center space-x-2">
                                        @if (!isCurrentYear)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="p-2 bg-blue-100 text-blue-600 rounded-full hover:bg-blue-200 hover:shadow-md transition-all duration-200" title="Chỉnh sửa">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="p-2 bg-gray-100 text-gray-400 rounded-full cursor-not-allowed" disabled title="Không thể chỉnh sửa cấu hình năm hiện tại">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                            </button>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id" class="p-2 bg-blue-100 text-blue-600 rounded-full hover:bg-blue-200 hover:shadow-md transition-all duration-200" title="Xem chi tiết">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        </a>
                                        @if (!isCurrentYear)
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="p-2 bg-red-100 text-red-600 rounded-full hover:bg-red-200 hover:shadow-md transition-all duration-200" title="Xóa">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 4v12m4-12v12"></path></svg>
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="p-2 bg-gray-100 text-gray-400 rounded-full cursor-not-allowed" disabled title="Không thể xóa cấu hình năm hiện tại">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 4v12m4-12v12"></path></svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="p-4 bg-blue-50 text-blue-600 text-sm flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            Cập nhật lần cuối: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-dismiss alerts after 4 seconds
            setTimeout(function () {
                document.querySelectorAll('.alert').forEach(alert => {
                    alert.classList.add('animate__animated', 'animate__fadeOut');
                    setTimeout(() => {
                        const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                        bsAlert.close();
                    }, 500);
                });
            }, 4000);

            // Initialize tooltips
            document.querySelectorAll('[title]').forEach(element => {
                new bootstrap.Tooltip(element);
            });

            // Initialize DataTable
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "order": [[0, "desc"]],
                "pageLength": 10,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tất cả"]],
                "dom": '<"flex justify-between items-center mb-4"lf>rt<"flex justify-between items-center mt-4"ip>',
                "responsive": true,
                "stateSave": true,
                "drawCallback": function () {
                    $('.dataTables_paginate > .pagination').addClass('pagination-sm flex space-x-1');
                    $('.dataTables_paginate .paginate_button').addClass('px-3 py-1 rounded-full bg-blue-50 text-blue-700 hover:bg-blue-100 transition-all duration-200');
                    $('.dataTables_paginate .paginate_button.current').addClass('bg-blue-600 text-white');
                }
            });
        });
    </script>
}