@model HR_KD.ViewModels.CauHinhPhepNamListViewModel
@{
    ViewData["Title"] = "Danh sách cấu hình phép năm";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Header Section with Dashboard Style -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card bg-gradient-primary shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="text-white mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Cấu hình phép năm
                            </h4>
                            <p class="text-white-50 mb-0 small">Quản lý cấu hình phép năm cho nhân viên</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-light btn-sm rounded-pill shadow-sm">
                                <i class="fas fa-plus me-1"></i> Thêm mới
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Display TempData messages if present -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-3" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card border-left-primary shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng cấu hình
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.DanhSachCauHinh.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-left-success shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Năm hiện tại
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@DateTime.Now.Year</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-left-info shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Cấu hình hiện hành
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.DanhSachCauHinh.FirstOrDefault(c => c.Nam == DateTime.Now.Year)?.SoNgayPhepMacDinh ?? 0) ngày
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 animate__animated animate__fadeIn">
                <div class="card-header py-3 bg-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-list me-2"></i>Danh sách cấu hình phép năm
                        </h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped border" id="dataTable" width="100%" cellspacing="0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="text-center" style="width: 10%">
                                        <i class="far fa-calendar-alt me-1"></i>Năm
                                    </th>
                                    <th class="text-center" style="width: 20%">
                                        <i class="fas fa-calendar-day me-1"></i>Số ngày phép mặc định
                                    </th>
                                    <th style="width: 50%">
                                        <i class="fas fa-cogs me-1"></i>Chính sách áp dụng
                                    </th>
                                    <th class="text-center" style="width: 20%">
                                        <i class="fas fa-tools me-1"></i>Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DanhSachCauHinh)
                                {
                                    bool isCurrentYear = item.Nam == DateTime.Now.Year;
                                    <tr class="@(isCurrentYear ? "table-active" : "")">
                                        <td class="text-center align-middle fw-bold">
                                            @item.Nam
                                            @if (isCurrentYear)
                                            {
                                                <span class="badge bg-success ms-1">Hiện tại</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-primary rounded-pill px-3 py-2">@item.SoNgayPhepMacDinh ngày</span>
                                        </td>
                                        <td class="align-middle">
                                            @if (item.DanhSachTenChinhSach != null && item.DanhSachTenChinhSach.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var tenChinhSach in item.DanhSachTenChinhSach)
                                                    {
                                                        <span class="badge bg-info text-dark rounded-pill">@tenChinhSach</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small"><i class="fas fa-info-circle me-1"></i>Không có chính sách</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                @if (!isCurrentYear)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-primary disabled" data-bs-toggle="tooltip" title="Không thể chỉnh sửa cấu hình năm hiện tại">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                }
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Xem chi tiết">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                @if (!isCurrentYear)
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger disabled" data-bs-toggle="tooltip" title="Không thể xóa cấu hình năm hiện tại">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer small text-muted py-2">
                    <i class="far fa-clock me-1"></i>Cập nhật lần cuối: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>
        </div>
    </div>
</div>


<style>
