@model HR_KD.Models.ChinhSachPhepNamViewModel
@{
    ViewData["Title"] = "Chỉnh sửa chính sách phép năm";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

<div class="container mx-auto px-4 py-8 bg-gray-50 min-h-screen">
    <!-- Header Section with Breadcrumb -->
    <div class="mb-8">
        <nav aria-label="breadcrumb" class="flex items-center text-sm text-blue-600 mb-4">
            <ol class="flex space-x-2">
                <li><a href="/" class="hover:text-blue-800">Trang chủ</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li><a href="/QuanLyNghi" class="hover:text-blue-800">Quản lý nghỉ phép</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li><a asp-action="Index" class="hover:text-blue-800">Chính sách phép năm</a></li>
                <li><span class="text-blue-400">/</span></li>
                <li class="text-blue-900 font-medium">Chỉnh sửa</li>
            </ol>
        </nav>
        <div class="flex items-center justify-between">
            <h2 class="text-3xl font-extrabold text-blue-900">
                <svg class="w-6 h-6 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                Chỉnh sửa chính sách phép năm
            </h2>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white text-blue-700 rounded-full hover:bg-blue-50 transition-all duration-300 shadow-md">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Main Form Card -->
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-blue-100 animate__animated animate__fadeIn">
        <div class="p-6 border-b border-blue-100">
            <h5 class="text-lg font-semibold text-blue-900">
                <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                Thông tin chính sách
            </h5>
        </div>
        <div class="p-6">
            <form asp-action="Edit" method="post" class="space-y-6" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-800 rounded-lg hidden animate__animated animate__fadeIn" role="alert">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    Vui lòng kiểm tra lại thông tin
                </div>

                <!-- Basic Info Section -->
                <div class="bg-blue-50 rounded-xl p-5">
                    <h6 class="text-sm font-semibold text-blue-900 mb-4">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Thông tin cơ bản
                    </h6>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="TenChinhSach" class="block text-sm font-medium text-blue-900 mb-1">Tên chính sách</label>
                            <input asp-for="TenChinhSach" class="w-full px-4 py-3 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-blue-900 placeholder-blue-400" placeholder="Nhập tên chính sách" />
                            <span asp-validation-for="TenChinhSach" class="text-red-600 text-xs mt-1"></span>
                        </div>
                        <div>
                            <label asp-for="ApDungTuNam" class="block text-sm font-medium text-blue-900 mb-1">Áp dụng từ năm</label>
                            <input asp-for="ApDungTuNam" type="number" class="w-full px-4 py-3 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-blue-900 placeholder-blue-400" placeholder="Nhập năm áp dụng" />
                            <span asp-validation-for="ApDungTuNam" class="text-red-600 text-xs mt-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Policy Details Section -->
                <div class="bg-blue-50 rounded-xl p-5">
                    <h6 class="text-sm font-semibold text-blue-900 mb-4">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
                        Thông số chi tiết
                    </h6>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-white rounded-lg shadow-sm p-4">
                            <label asp-for="SoNam" class="block text-sm font-medium text-blue-900 mb-1">Số năm làm việc</label>
                            <input asp-for="SoNam" type="number" min="1" class="w-full px-4 py-3 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-blue-900 placeholder-blue-400" placeholder="Nhập số năm" />
                            <span asp-validation-for="SoNam" class="text-red-600 text-xs mt-1"></span>
                            <p class="text-xs text-blue-600 mt-1">
                                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                Số năm làm việc để được hưởng phép
                            </p>
                        </div>
                        <div class="bg-white rounded-lg shadow-sm p-4">
                            <label asp-for="SoNgayCongThem" class="block text-sm font-medium text-blue-900 mb-1">Số ngày công thêm</label>
                            <input asp-for="SoNgayCongThem" type="number" min="0" step="0.5" class="w-full px-4 py-3 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-blue-900 placeholder-blue-400" placeholder="Nhập số ngày" />
                            <span asp-validation-for="SoNgayCongThem" class="text-red-600 text-xs mt-1"></span>
                            <p class="text-xs text-blue-600 mt-1">
                                <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                Số ngày phép được cộng thêm
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Status Section -->
                <div class="bg-blue-50 rounded-xl p-5">
                    <h6 class="text-sm font-semibold text-blue-900 mb-4">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Trạng thái
                    </h6>
                    <div class="flex items-center space-x-4">
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input asp-for="ConHieuLuc" type="checkbox" class="sr-only peer" id="ConHieuLuc" />
                            <div class="w-11 h-6 bg-gray-200 rounded-full peer-checked:bg-blue-600 transition-all duration-300"></div>
                            <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full peer-checked:translate-x-5 transition-all duration-300"></div>
                        </label>
                        <span id="statusText" class="text-sm font-medium text-blue-900"></span>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-end space-x-4 mt-6">
                    <a asp-action="Index" class="inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-all duration-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        Hủy
                    </a>
                    <button type="submit" class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-md">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path></svg>
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Update toggle status text
            const toggle = document.getElementById('ConHieuLuc');
            const statusText = document.getElementById('statusText');
            function updateStatus() {
                statusText.textContent = toggle.checked ? 'Có hiệu lực' : 'Không hiệu lực';
                statusText.classList.toggle('text-green-600', toggle.checked);
                statusText.classList.toggle('text-red-600', !toggle.checked);
            }
            toggle.addEventListener('change', updateStatus);
            updateStatus();

            // Form validation
            const form = document.querySelector('form');
            form.addEventListener('submit', function (e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    form.querySelector('.alert').classList.remove('hidden');
                }
                form.classList.add('was-validated');
            });

            // Input focus effect
            document.querySelectorAll('input:not([type="hidden"])').forEach(input => {
                input.addEventListener('focus', () => input.classList.add('ring-2', 'ring-blue-500'));
                input.addEventListener('blur', () => input.classList.remove('ring-2', 'ring-blue-500'));
            });

            // Focus first input
            const firstInput = document.querySelector('form input:not([type="hidden"])');
            if (firstInput) {
                firstInput.focus();
            }
        });
    </script>
}