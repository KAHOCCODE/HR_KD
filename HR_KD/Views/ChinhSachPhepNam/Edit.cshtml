    @model HR_KD.Models.ChinhSachPhepNamViewModel
    @{
        ViewData["Title"] = "Chỉnh sửa chính sách phép năm";
        Layout = "~/Views/Shared/_ThemeLayout.cshtml";
    }

    <div class="container-fluid p-0">
        <!-- Header with breadcrumb -->
        <div class="row align-items-center mb-4">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/QuanLyNghi">Quản lý nghỉ phép</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Chính sách phép năm</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
                    </ol>
                </nav>
                <h2 class="fw-bold mt-2 text-primary">Chỉnh sửa chính sách phép năm</h2>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-header bg-white py-3 border-bottom border-light">
                        <h5 class="card-title mb-0 text-dark">
                            <i class="fas fa-edit me-2 text-primary"></i>Thông tin chính sách
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 px-3" role="alert"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="TenChinhSach" class="form-label fw-medium">Tên chính sách</label>
                                        <input asp-for="TenChinhSach" class="form-control" id="TenChinhSach" />
                                        <span asp-validation-for="TenChinhSach" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="ApDungTuNam" class="form-label fw-medium">Áp dụng từ năm</label>
                                        <input asp-for="ApDungTuNam" class="form-control" type="number" id="ApDungTuNam" />
                                        <span asp-validation-for="ApDungTuNam" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="SoNam" class="form-label fw-medium">Số năm</label>
                                        <input asp-for="SoNam" class="form-control" type="number" min="1" id="SoNam" />
                                        <div class="form-text">Số năm làm việc để được hưởng phép thêm</div>
                                        <span asp-validation-for="SoNam" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="SoNgayCongThem" class="form-label fw-medium">Số ngày cộng thêm</label>
                                        <input asp-for="SoNgayCongThem" class="form-control" type="number" min="0" step="0.5" id="SoNgayCongThem" />
                                        <div class="form-text">Số ngày phép được cộng thêm khi đạt đủ số năm làm việc</div>
                                        <span asp-validation-for="SoNgayCongThem" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input asp-for="ConHieuLuc" class="form-check-input" type="checkbox" id="ConHieuLuc" />
                                            <label class="form-check-label fw-medium" for="ConHieuLuc">
                                                Còn hiệu lực
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i> Hủy
                                </a>
                                <button type="submit" class="btn btn-primary px-4 d-flex align-items-center">
                                    <i class="fas fa-save me-2"></i> Lưu thay đổi
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            /* Custom styles for the form */
            .card {
                transition: all 0.2s ease;
            }

            /* Fix for floating labels positioning */
            .form-floating {
                position: relative;
            }

                .form-floating > label {
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 100%;
                    padding: 1rem 0.75rem;
                    pointer-events: none;
                    border: 1px solid transparent;
                    transform-origin: 0 0;
                    transition: opacity .1s ease-in-out, transform .1s ease-in-out;
                }

                .form-floating > .form-control {
                    padding-top: 1.625rem;
                    padding-bottom: 0.625rem;
                }

                    .form-floating > .form-control:focus ~ label,
                    .form-floating > .form-control:not(:placeholder-shown) ~ label {
                        opacity: .65;
                        transform: scale(.85) translateY(-0.5rem) translateX(0.15rem);
                        background-color: white;
                        padding: 0 0.25rem;
                        height: auto;
                        line-height: 1.2;
                    }

                    .form-floating > .form-control:focus {
                        border-color: #3b7ddd;
                        box-shadow: 0 0 0 0.25rem rgba(59, 125, 221, 0.15);
                    }

            .form-text {
                margin-top: 0.25rem;
                font-size: 0.75rem;
                color: #6c757d;
            }

            /* Field styling */
            .form-label {
                font-weight: 500;
                margin-bottom: 0.5rem;
                color: #212529;
            }

            .form-control {
                padding: 0.75rem 1rem;
                border-radius: 0.375rem;
                border: 1px solid #ced4da;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            }

                .form-control:focus {
                    border-color: #3b7ddd;
                    box-shadow: 0 0 0 0.25rem rgba(59, 125, 221, 0.15);
                }

            /* Animation for focused elements */
            .control-focus {
                transition: all 0.2s ease;
            }

                .control-focus .form-label {
                    color: #3b7ddd;
                }

            /* Custom checkbox styling */
            .form-check-input {
                width: 1.25em;
                height: 1.25em;
                margin-top: 0.125em;
                cursor: pointer;
            }

                .form-check-input:checked {
                    background-color: #28a745;
                    border-color: #28a745;
                }

            .form-check-label {
                cursor: pointer;
                padding-left: 0.25rem;
            }

            .btn-primary {
                background-color: #3b7ddd;
                border-color: #3b7ddd;
            }

                .btn-primary:hover {
                    background-color: #326abc;
                    border-color: #2f64b1;
                }

            .text-primary {
                color: #3b7ddd !important;
            }

            /* Animated save button */
            button[type="submit"]:hover {
                transform: translateY(-1px);
                box-shadow: 0 4px 6px rgba(59, 125, 221, 0.2);
            }

            button[type="submit"] {
                transition: all 0.2s ease;
            }
        </style>
    }

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Initialize tooltips if Bootstrap 5 is used
                if (typeof bootstrap !== 'undefined' && bootstrap.Tooltip) {
                    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                    tooltipTriggerList.map(function (tooltipTriggerEl) {
                        return new bootstrap.Tooltip(tooltipTriggerEl)
                    });
                }

                // Form validation
                const forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });

                // Focus first input when page loads
                const firstInput = document.querySelector('form input:not([type="hidden"])');
                if (firstInput) {
                    firstInput.focus();
                }

                // Add subtle animation on form controls focus
                const formControls = document.querySelectorAll('.form-control');
                formControls.forEach(control => {
                    control.addEventListener('focus', function () {
                        this.parentElement.classList.add('control-focus');
                    });
                    control.addEventListener('blur', function () {
                        this.parentElement.classList.remove('control-focus');
                    });
                });
            });
        </script>
        <!-- Optional: Add Bootstrap 5 JS if not already in your layout -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Add Font Awesome if not already in your layout -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

        <!-- Add Animate.css for animations -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    }
