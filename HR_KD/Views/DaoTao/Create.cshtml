@model HR_KD.DTOs.DaoTaoDTO

@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
    ViewData["Title"] = "Tạo mới khóa đào tạo";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Tạo mới khóa đào tạo</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="TenDaoTao" class="control-label"></label>
                    <input asp-for="TenDaoTao" class="form-control" placeholder="Nhập tên khóa đào tạo" />
                    <span asp-validation-for="TenDaoTao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MoTa" class="control-label"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả khóa đào tạo"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NoiDung" class="control-label"></label>
                    <textarea asp-for="NoiDung" class="form-control" rows="3" placeholder="Nhập nội dung khóa đào tạo"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayBatDau" class="control-label"></label>
                    <input asp-for="NgayBatDau" class="form-control" type="date" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayKetThuc" class="control-label"></label>
                    <input asp-for="NgayKetThuc" class="form-control" type="date" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaPhongBan" class="control-label"></label>
                    <select asp-for="MaPhongBan" class="form-control" asp-items="ViewBag.PhongBans">
                        <option value="">-- Chọn phòng ban --</option>
                    </select>
                    <span asp-validation-for="MaPhongBan" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">Tạo khóa đào tạo</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card-header {
        padding: 0.75rem 1.25rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 0.25rem;
    }
</style>