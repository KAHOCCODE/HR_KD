@model IEnumerable<HR_KD.DTOs.DaoTaoDTO>

@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
    ViewData["Title"] = "Danh sách khóa đào tạo";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">Tạo mới khóa đào tạo</a>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-lg border-0">
                        <div class="card-header bg-gradient-primary text-white text-center">
                            <h5 class="mb-0">@item.TenDaoTao</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Phòng ban:</strong> @item.TenPhongBan</p>
                            <p class="card-text"><strong>Ngày bắt đầu:</strong> @(item.NgayBatDau?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</p>
                            <p class="card-text"><strong>Ngày kết thúc:</strong> @(item.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "Chưa xác định")</p>
                            <p class="card-text"><strong>Mô tả:</strong> @(string.IsNullOrEmpty(item.MoTa) ? "Không có mô tả" : item.MoTa)</p>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.MaDaoTao" class="btn btn-info btn-sm">Chi tiết</a>
                                <a asp-action="Edit" asp-route-id="@item.MaDaoTao" class="btn btn-warning btn-sm">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaDaoTao" class="btn btn-danger btn-sm">Xóa</a>
                                <a asp-action="Assign" asp-route-id="@item.MaDaoTao" class="btn btn-secondary btn-sm">Gán nhân viên</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info shadow-sm" role="alert">
                    Không có khóa đào tạo nào.
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .card-header {
        padding: 1rem 1.5rem;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .bg-gradient-primary {
        background: linear-gradient(90deg, #007bff 0%, #00c4ff 100%);
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-footer {
        padding: 1rem;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .card-text {
        margin-bottom: 0.75rem;
        color: #555;
    }

        .card-text strong {
            color: #333;
        }

    .btn-group .btn {
        margin: 0 5px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .alert-info {
        border-radius: 10px;
    }
</style>