@model HR_KD.Data.LoaiNgayNghi
@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";

    ViewData["Title"] = "Tạo loại ngày nghỉ";
}

<div class="container mx-auto px-4 py-8 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="mb-6">
        <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-2xl shadow-lg p-6">
            <div class="flex items-center justify-between">
                <h4 class="text-2xl font-extrabold">
                    <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    @ViewData["Title"]
                </h4>
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white text-blue-700 rounded-full hover:bg-blue-50 transition-all duration-300 shadow-md">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-blue-100 animate__animated animate__fadeIn">
        <div class="p-6">
            <form asp-action="Create" id="leaveTypeForm">
                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-800 rounded-lg mb-6 hidden" role="alert"></div>

                <!-- Basic Information Section -->
                <div class="p-6 bg-white rounded-xl shadow-sm mb-6 border border-blue-50 hover:shadow-md transition-shadow duration-300">
                    <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Thông tin cơ bản
                    </h5>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="TenLoai" class="block text-sm font-semibold text-blue-900 mb-2">
                                Tên loại ngày nghỉ <span class="text-red-600">*</span>
                            </label>
                            <input asp-for="TenLoai" class="w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" id="tenLoai" placeholder="Nhập tên loại nghỉ" required />
                            <span asp-validation-for="TenLoai" class="text-red-600 text-sm mt-1"></span>
                        </div>
                        <div>
                            <label asp-for="MoTa" class="block text-sm font-semibold text-blue-900 mb-2">Mô tả</label>
                            <textarea asp-for="MoTa" class="w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" id="moTa" placeholder="Nhập mô tả" rows="4"></textarea>
                            <span asp-validation-for="MoTa" class="text-red-600 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>

                <!-- Leave Limits Section -->
                <div class="p-6 bg-white rounded-xl shadow-sm mb-6 border border-blue-50 hover:shadow-md transition-shadow duration-300">
                    <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
                        Giới hạn ngày nghỉ
                    </h5>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="SoNgayNghiToiDa" class="block text-sm font-semibold text-blue-900 mb-2">Số ngày nghỉ tối đa</label>
                            <input asp-for="SoNgayNghiToiDa" type="number" class="w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" id="soNgayNghiToiDa" min="0" max="365" placeholder="Nhập số ngày nghỉ tối đa" />
                            <span asp-validation-for="SoNgayNghiToiDa" class="text-red-600 text-sm mt-1"></span>
                            <p class="text-sm text-blue-600 mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                Bỏ trống nếu không giới hạn số ngày nghỉ
                            </p>
                        </div>
                        <div>
                            <label asp-for="SoLanDangKyToiDa" class="block text-sm font-semibold text-blue-900 mb-2">Số lần đăng ký tối đa</label>
                            <input asp-for="SoLanDangKyToiDa" type="number" class="w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" id="soLanDangKyToiDa" min="0" max="100" placeholder="Nhập số lần đăng ký tối đa" />
                            <span asp-validation-for="SoLanDangKyToiDa" class="text-red-600 text-sm mt-1"></span>
                            <p class="text-sm text-blue-600 mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                Bỏ trống nếu không giới hạn số lần đăng ký
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Configuration Section -->
                <div class="p-6 bg-white rounded-xl shadow-sm mb-6 border border-blue-50 hover:shadow-md transition-shadow duration-300">
                    <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100">
                        <svg class="w-5 h-5 inline-block mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        Cấu hình loại ngày nghỉ
                    </h5>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="flex items-center">
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" asp-for="HuongLuong" class="sr-only peer">
                                <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-gradient-to-r peer-checked:from-blue-600 peer-checked:to-blue-700 transition-all duration-300"></div>
                                <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full peer-checked:translate-x-5 transition-transform duration-300"></div>
                            </label>
                            <div class="ml-3">
                                <span class="text-sm font-semibold text-blue-900">Được hưởng lương</span>
                                <p class="text-sm text-blue-600">Nhân viên vẫn được hưởng lương khi nghỉ</p>
                            </div>
                        </div>
                        <div class="flex items-center">
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" asp-for="TinhVaoPhepNam" class="sr-only peer">
                                <div class="w-11 h-6 bg-gray-200 rounded-full peer peer-checked:bg-gradient-to-r peer-checked:from-blue-600 peer-checked:to-blue-700 transition-all duration-300"></div>
                                <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full peer-checked:translate-x-5 transition-transform duration-300"></div>
                            </label>
                            <div class="ml-3">
                                <span class="text-sm font-semibold text-blue-900">Tính vào phép năm</span>
                                <p class="text-sm text-blue-600">Số ngày nghỉ sẽ trừ vào phép năm</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex justify-end space-x-4">
                    <a asp-action="Index" class="inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-all duration-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        Hủy
                    </a>
                    <button type="submit" class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-md">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path></svg>
                        Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Form validation
            const form = document.getElementById('leaveTypeForm');
            form.addEventListener('submit', function (e) {
                const tenLoai = document.getElementById('tenLoai').value;
                const soNgayNghiToiDa = document.getElementById('soNgayNghiToiDa').value;
                const soLanDangKyToiDa = document.getElementById('soLanDangKyToiDa').value;
                const errorDiv = document.querySelector('.alert');

                if (!tenLoai || tenLoai.length < 2) {
                    e.preventDefault();
                    errorDiv.textContent = 'Tên loại ngày nghỉ phải có ít nhất 2 ký tự';
                    errorDiv.classList.remove('hidden');
                    return;
                }

                if (soNgayNghiToiDa && (soNgayNghiToiDa < 0 || soNgayNghiToiDa > 365)) {
                    e.preventDefault();
                    errorDiv.textContent = 'Số ngày nghỉ tối đa phải từ 0 đến 365';
                    errorDiv.classList.remove('hidden');
                    return;
                }

                if (soLanDangKyToiDa && (soLanDangKyToiDa < 0 || soLanDangKyToiDa > 100)) {
                    e.preventDefault();
                    errorDiv.textContent = 'Số lần đăng ký tối đa phải từ 0 đến 100';
                    errorDiv.classList.remove('hidden');
                    return;
                }
            });

            // Toggle switch animation
            document.querySelectorAll('input[type="checkbox"]').forEach(input => {
                input.addEventListener('change', function () {
                    const container = this.closest('.flex');
                    container.classList.add('animate__animated', 'animate__pulse');
                    setTimeout(() => {
                        container.classList.remove('animate__animated', 'animate__pulse');
                    }, 500);
                });
            });

            // Focus animation
            document.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('focus', function () {
                    this.parentElement.classList.add('shadow-sm');
                });
                input.addEventListener('blur', function () {
                    this.parentElement.classList.remove('shadow-sm');
                });
            });

            // Initialize tooltips
            document.querySelectorAll('[title]').forEach(element => {
                new bootstrap.Tooltip(element);
            });
        });
    </script>
}