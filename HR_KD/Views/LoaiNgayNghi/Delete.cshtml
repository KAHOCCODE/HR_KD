@model HR_KD.Data.LoaiNgayNghi
@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
    ViewData["Title"] = "Xóa loại ngày nghỉ";
}

<div class="container mx-auto px-4 py-8 bg-gray-50 min-h-screen">
    <!-- Header Section -->
    <div class="mb-6">
        <div class="bg-gradient-to-r from-red-600 to-red-700 text-white rounded-2xl shadow-lg p-6">
            <div class="flex items-center justify-between">
                <h4 class="text-2xl font-extrabold">
                    <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 4v12m4-12v12"></path></svg>
                    @ViewData["Title"]
                </h4>
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-white text-red-700 rounded-full hover:bg-red-50 transition-all duration-300 shadow-md">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-red-100 animate__animated animate__fadeIn">
        <div class="p-6">
            <!-- Warning Alert -->
            <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-lg mb-6 shadow-sm">
                <div class="flex items-center">
                    <svg class="w-8 h-8 text-yellow-600 mr-3 animate__animated animate__shakeX" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
                    <div>
                        <h5 class="text-lg font-semibold text-yellow-800">Xác nhận xóa loại ngày nghỉ</h5>
                        <p class="text-yellow-700">Bạn đang chuẩn bị xóa một loại ngày nghỉ. Dữ liệu sau khi xóa sẽ không thể khôi phục. Vui lòng xác nhận thông tin trước khi thực hiện.</p>
                    </div>
                </div>
            </div>

            <!-- Information Sections -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="bg-white rounded-xl shadow-sm p-6 border border-blue-50 hover:shadow-md transition-shadow duration-300">
                    <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Thông tin cơ bản
                    </h5>
                    <div class="space-y-3">
                        <div class="flex">
                            <span class="w-1/3 text-sm font-semibold text-blue-900">Mã loại ngày nghỉ:</span>
                            <span class="w-2/3 text-sm text-blue-700">@Model.MaLoaiNgayNghi</span>
                        </div>
                        <div class="flex">
                            <span class="w-1/3 text-sm font-semibold text-blue-900">Tên loại:</span>
                            <span class="w-2/3 text-sm font-bold text-blue-700">@Model.TenLoai</span>
                        </div>
                        <div class="flex">
                            <span class="w-1/3 text-sm font-semibold text-blue-900">Mô tả:</span>
                            <span class="w-2/3 text-sm text-blue-700">
                                @if (string.IsNullOrEmpty(Model.MoTa))
                                {
                                    <span class="text-blue-500">Không có mô tả</span>
                                }
                                else
                                {
                                    @Model.MoTa
                                }
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Leave Configuration -->
                <div class="bg-white rounded-xl shadow-sm p-6 border border-blue-50 hover:shadow-md transition-shadow duration-300">
                    <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        Cấu hình lương và phép
                    </h5>
                    <div class="space-y-3">
                        <div class="flex">
                            <span class="w-1/2 text-sm font-semibold text-blue-900">Được hưởng lương:</span>
                            <span class="w-1/2 text-sm">
                                @if (Model.HuongLuong)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                        Có
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                                        Không
                                    </span>
                                }
                            </span>
                        </div>
                        <div class="flex">
                            <span class="w-1/2 text-sm font-semibold text-blue-900">Tính vào phép năm:</span>
                            <span class="w-1/2 text-sm">
                                @if (Model.TinhVaoPhepNam)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                        Có
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                                        Không
                                    </span>
                                }
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Leave Limits -->
            <div class="bg-white rounded-xl shadow-sm p-6 border border-blue-50 hover:shadow-md transition-shadow duration-300 mt-6">
                <h5 class="text-lg font-semibold text-blue-900 mb-4 pb-3 border-b border-blue-100 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
                    Giới hạn ngày nghỉ
                </h5>
                <div class="space-y-3">
                    <div class="flex">
                        <span class="w-1/2 text-sm font-semibold text-blue-900">Số ngày nghỉ tối đa:</span>
                        <span class="w-1/2 text-sm">
                            @if (Model.SoNgayNghiToiDa.HasValue && Model.SoNgayNghiToiDa.Value > 0)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@Model.SoNgayNghiToiDa ngày</span>
                            }
                            else
                            {
                                <span class="text-blue-500">Không giới hạn</span>
                            }
                    </div>
                    <div class="flex">
                        <span class="w-1/2 text-sm font-semibold text-blue-900">Số lần đăng ký tối đa:</span>
                        <span class="w-1/2 text-sm">
                            @if (Model.SoLanDangKyToiDa.HasValue && Model.SoLanDangKyToiDa.Value > 0)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@Model.SoLanDangKyToiDa lần</span>
                            }
                            else
                            {
                                <span class="text-blue-500">Không giới hạn</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="mt-6 pt-6 border-t border-gray-100 flex justify-center space-x-4">
                <form asp-action="Delete" id="deleteForm">
                    <input type="hidden" asp-for="MaLoaiNgayNghi" />
                    <button type="button" onclick="confirmDelete()" class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-full hover:from-red-700 hover:to-red-800 transition-all duration-300 shadow-md">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 4v12m4-12v12"></path></svg>
                        Xác nhận xóa
                    </button>
                </form>
                <a asp-action="Index" class="inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 transition-all duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                    Hủy thao tác
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Xác nhận xóa?',
                html: '<div class="text-left"><p>Bạn có chắc chắn muốn xóa loại ngày nghỉ này?</p><p class="text-red-600"><svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg><strong>Dữ liệu sau khi xóa sẽ không thể khôi phục.</strong></p></div>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: '<svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-4h4m-4 4v12m4-12v12"></path></svg>Xác nhận xóa',
                cancelButtonText: '<svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>Hủy thao tác',
                focusCancel: true,
                reverseButtons: true,
                showClass: {
                    popup: 'animate__animated animate__fadeInDown animate__faster'
                },
                hideClass: {
                    popup: 'animate__animated animate__fadeOutUp animate__faster'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Initialize animations
            const warningIcon = document.querySelector('.animate__shakeX');
            if (warningIcon) {
                warningIcon.classList.add('animate__animated', 'animate__shakeX');
                setTimeout(() => {
                    warningIcon.classList.remove('animate__animated', 'animate__shakeX');
                }, 1000);
            }
        });
    </script>
}