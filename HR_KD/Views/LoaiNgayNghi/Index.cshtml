                        <div class="col-md-8">
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text" id="tableSearch" class="form-control border-start-0" placeholder="Tìm kiếm loại ngày nghỉ...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex justify-content-end">
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-filter me-1"></i> Lọc
                                    </button>
                                    <ul class="dropdown-menu shadow-sm" aria-labelledby="filterDropdown">
                                        <li><a class="dropdown-item" href="#" data-filter="all">Tất cả</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="huongluong">Có hưởng lương</a></li>
                                        <li><a class="dropdown-item" href="#" data-filter="phepnam">Tính vào phép năm</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> *@

                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="loaiNgayNghiTable">
                            <thead>
                                <tr class="bg-light">
                                    <th class="ps-3">@Html.DisplayNameFor(model => model.MaLoaiNgayNghi)</th>
                                    <th>@Html.DisplayNameFor(model => model.TenLoai)</th>
                                    <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                                    <th class="text-center">
                                        <span data-bs-toggle="tooltip" title="Nhân viên có được hưởng lương khi nghỉ">
                                            <i class="fas fa-coins me-1"></i> Hưởng lương
                                        </span>
                                    </th>
                                    <th class="text-center">
                                        <span data-bs-toggle="tooltip" title="Ngày nghỉ này có tính vào phép năm">
                                            <i class="fas fa-calendar-check me-1"></i> Phép năm
                                        </span>
                                    </th>
                                    <th class="text-center">
                                        <span data-bs-toggle="tooltip" title="Ngày nghỉ này có tính vào lương">
                                            <i class="fas fa-money-bill-wave me-1"></i> Tính lương
                                        </span>
                                    </th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="ps-3">
                                            <span class="badge bg-primary rounded-pill">@item.MaLoaiNgayNghi</span>
                                        </td>
                                        <td class="fw-medium">@item.TenLoai</td>
                                        <td class="text-muted">@item.MoTa</td>
                                        <td class="text-center">
                                            @if (item.HuongLuong)
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-check-circle text-success fs-5"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-times-circle text-secondary fs-5"></i>
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.TinhVaoPhepNam)
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-check-circle text-success fs-5"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-times-circle text-secondary fs-5"></i>
                                                </span>
                                            }
                                        </td>
                                       @*  <td class="text-center">
                                            @if (item.CoTinhVaoLuong)
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-check-circle text-success fs-5"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-indicator">
                                                    <i class="fas fa-times-circle text-secondary fs-5"></i>
                                                </span>
                                            }
                                        </td> *@
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.MaLoaiNgayNghi" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                               @*  <a asp-action="Details" asp-route-id="@item.MaLoaiNgayNghi" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="Xem chi tiết">
                                                    <i class="fas fa-info-circle"></i>
                                                </a> *@
                                                <a asp-action="Delete" asp-route-id="@item.MaLoaiNgayNghi" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>

                                          
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Empty State UI -->
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <img src="~/images/empty-state.svg" alt="Không có dữ liệu" class="img-fluid mb-3" style="max-width: 200px;">
                            <h5>Chưa có loại ngày nghỉ nào</h5>
                            <p class="text-muted">Bạn có thể thêm loại ngày nghỉ mới bằng cách nhấn vào nút "Thêm loại nghỉ"</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-1"></i> Thêm loại nghỉ ngay
                            </a>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <div class="text-muted small">
                            Hiển thị <span id="displayCount">@Model.Count()</span> loại ngày nghỉ
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info cards row -->
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-gradient-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Tổng loại ngày nghỉ</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                        </div>
                      @*   <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-calendar-alt fa-2x text-white"></i>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-gradient-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Loại có hưởng lương</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(m => m.HuongLuong)</h3>
                        </div>
                       @*  <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-coins fa-2x text-white"></i>
                        </div> *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-gradient-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Tính vào phép năm</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(m => m.TinhVaoPhepNam)</h3>
                        </div>
                     @*    <div class="rounded-circle bg-white bg-opacity-25 p-3">
