@model IEnumerable<HR_KD.Data.LoaiNgayNghi>
@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}
@{
    ViewData["Title"] = "Quản lý loại ngày nghỉ";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <!-- Card Header với gradient -->
                <div class="card-header bg-gradient-primary text-white rounded-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0 fw-bold">
                                <i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]
                            </h4>
                            <p class="text-white-50 mb-0">Quản lý các loại nghỉ phép và chế độ hưởng lương</p>
                        </div>
                        <a asp-action="Create" class="btn btn-light btn-sm">
                            <i class="fas fa-plus-circle me-1"></i> Thêm loại nghỉ
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle fs-4 me-2"></i>
                                <span>@TempData["SuccessMessage"]</span>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle fs-4 me-2"></i>
                                <span>@TempData["ErrorMessage"]</span>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

