@{
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
    ViewData["Title"] = "Quản lý bảng lương theo phòng ban";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container py-4">
    <h2 class="text-2xl font-bold mb-4">Quản lý bảng lương theo phòng ban</h2>

    <div class="mb-3 d-flex gap-3 align-items-center">
        <div>
            <label class="form-label">Chọn tháng/năm:</label>
            <div class="d-flex gap-2">
                <select id="monthSelect" class="form-select w-auto">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i" selected="@(i == DateTime.Now.Month ? "selected" : null)">Tháng @i</option>
                    }
                </select>
                <select id="yearSelect" class="form-select w-auto">
                    @for (int i = 2020; i <= DateTime.Now.Year + 1; i++)
                    {
                        <option value="@i" selected="@(i == DateTime.Now.Year ? "selected" : null)">@i</option>
                    }
                </select>
            </div>
        </div>
        <button class="btn btn-success" onclick="openCreateBulkModal()">
            <i class="fas fa-plus-circle"></i> Tạo hàng loạt cho tháng <span id="selectedMonthYear"></span>
        </button>
    </div>

    <div id="payrollContainer"></div>
</div>

<div class="modal fade" id="createPayrollModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-file-invoice"></i> Tạo bảng lương</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có muốn tạo bảng lương cho <strong id="modalEmployeeName"></strong> không?</p>
                <input type="hidden" id="modalMaNv" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times"></i> Hủy</button>
                <button class="btn btn-primary" onclick="confirmCreatePayroll()"><i class="fas fa-check"></i> Tạo</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="viewPayrollModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-eye"></i> Chi tiết bảng lương</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="payrollDetailContainer" class="space-y-3 text-gray-700">
                    <table class="table table-bordered table-sm">
                        <tbody>
                            <tr>
                                <th scope="row"><i class="fas fa-user mr-1"></i> Họ tên</th>
                                <td id="detailHoTen"></td>
                                <th scope="row"><i class="fas fa-id-card mr-1"></i> Mã NV</th>
                                <td id="detailMaNv"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-venus-mars mr-1"></i> Giới tính</th>
                                <td id="detailGioiTinh"></td>
                                <th scope="row"><i class="fas fa-building mr-1"></i> Phòng ban</th>
                                <td id="detailPhongBan"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-briefcase mr-1"></i> Chức vụ</th>
                                <td id="detailChucVu"></td>
                                <th scope="row"><i class="fas fa-file-contract mr-1"></i> Loại HĐ</th>
                                <td id="detailLoaiHopDong"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-calendar-alt mr-1"></i> Tháng</th>
                                <td colspan="3" id="detailThangNam"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-info-circle mr-1"></i> Trạng thái</th>
                                <td colspan="3" id="detailTenTrangThai"></td>
                            </tr>
                            <tr>
                                <th class="table-info" colspan="4"><i class="fas fa-coins mr-1"></i> B. THU NHẬP</th>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-arrow-right mr-1"></i> Lương cơ bản</th>
                                <td id="detailLuongCoBan"></td>
                                <th scope="row"><i class="fas fa-arrow-right mr-1"></i> Phụ cấp cố định</th>
                                <td id="detailPhuCapCoDinh"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-arrow-right mr-1"></i> Thưởng cố định</th>
                                <td id="detailThuongCoDinh"></td>
                                <th scope="row"><i class="fas fa-plus mr-1 text-success"></i> Phụ cấp thêm</th>
                                <td class="text-success" id="detailPhuCapThem"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-plus mr-1 text-success"></i> Lương thêm</th>
                                <td class="text-success" id="detailLuongThem"></td>
                                <th scope="row"><i class="fas fa-arrow-up mr-1 text-primary"></i> Tăng ca</th>
                                <td class="text-primary" id="detailLuongTangCa"></td>
                            </tr>
                            <tr>
                                <th class="table-info" colspan="2"><i class="fas fa-calculator mr-1"></i> Tổng lương</th>
                                <td class="table-info fw-bold text-end" colspan="2" id="detailTongLuong"></td>
                            </tr>
                            <tr>
                                <th class="table-danger" colspan="4"><i class="fas fa-minus-circle mr-1"></i> C. KHẤU TRỪ</th>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-minus mr-1 text-danger"></i> BHXH</th>
                                <td class="text-danger" id="detailBHXH"></td>
                                <th scope="row"><i class="fas fa-minus mr-1 text-danger"></i> BHYT</th>
                                <td class="text-danger" id="detailBHYT"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-minus mr-1 text-danger"></i> BHTN</th>
                                <td class="text-danger" id="detailBHTN"></td>
                                <th scope="row"><i class="fas fa-minus mr-1 text-danger"></i> Thuế TNCN</th>
                                <td class="text-danger" id="detailThueTNCN"></td>
                            </tr>
                            <tr>
                                <th class="table-success" colspan="2"><i class="fas fa-money-bill-wave mr-1 text-success"></i> D. LƯƠNG THỰC NHẬN</th>
                                <td class="table-success fw-bold text-end text-lg" colspan="2" id="detailThucNhan"></td>
                            </tr>
                            <tr id="taiKhoanNganHangSection" class="collapse">
                                <th class="table-primary" colspan="4"><i class="fas fa-university mr-1 text-primary"></i> E. THÔNG TIN TÀI KHOẢN</th>
                            </tr>
                            <tr id="nganHangRow" class="collapse">
                                <th scope="row"><i class="fas fa-building mr-1"></i> Ngân hàng</th>
                                <td id="detailTenNganHang"></td>
                                <th scope="row"><i class="fas fa-code-branch mr-1"></i> Chi nhánh</th>
                                <td id="detailChiNhanh"></td>
                            </tr>
                            <tr id="soTaiKhoanRow" class="collapse">
                                <th scope="row"><i class="fas fa-hashtag mr-1"></i> Số tài khoản</th>
                                <td colspan="3" id="detailSoTaiKhoan"></td>
                            </tr>
                            <tr id="ghiChuSection" class="collapse">
                                <th class="table-warning" scope="row"><i class="fas fa-sticky-note mr-1 text-warning"></i> Ghi chú</th>
                                <td colspan="3" id="detailGhiChu"></td>
                            </tr>
                            <tr>
                                <th scope="row"><i class="fas fa-calendar-check mr-1"></i> Ngày in</th>
                                <td colspan="3" id="detailNgayIn"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="createBulkPayrollModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle"></i> Xác nhận tạo hàng loạt</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn tạo bảng lương cho <strong class="text-danger">TẤT CẢ</strong> nhân viên trong tháng <span id="bulkModalMonth"></span> năm <span id="bulkModalYear"></span> không?</p>
                <p class="text-warning"><i class="fas fa-exclamation-triangle"></i> <strong>Lưu ý:</strong> Thao tác này sẽ tạo bảng lương cho những nhân viên chưa có bảng lương trong tháng đã chọn.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times"></i> Hủy</button>
                <button class="btn btn-primary" onclick="confirmCreateBulkPayroll()"><i class="fas fa-check"></i> Xác nhận tạo hàng loạt</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            loadPayrollStatus(); // Tải dữ liệu mặc định khi trang load
            updateSelectedMonthYear();

            $('#monthSelect, #yearSelect').on('change', function () {
                loadPayrollStatus();
                updateSelectedMonthYear();
            });
        });

        function updateSelectedMonthYear() {
            const month = $('#monthSelect').val();
            const year = $('#yearSelect').val();
            $('#selectedMonthYear').text(`${month}/${year}`);
            $('#bulkModalMonth').text(month);
            $('#bulkModalYear').text(year);
        }

        function loadPayrollStatus() {
            const year = $('#yearSelect').val();
            const month = $('#monthSelect').val();

            $.get(`/api/PayrollApi/GetPayrollStatus?year=${year}&month=${month}`, function (result) {
                let html = '';
                result.forEach(pb => {
                    html += `<div class="bg-white border border-gray-200 rounded p-3 mb-4 shadow-sm">
                                                <h4 class="text-lg font-semibold mb-3 text-indigo-600"><i class="fas fa-users"></i> ${pb.tenPhongBan}</h4>
                                                <div class="row">`;

                    pb.nhanViens.forEach(nv => {
                        html += `<div class="col-md-6 mb-3">
                                                    <div class="p-3 border rounded shadow-sm d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <div class="fw-semibold">${nv.hoTen}</div>
                                                            <div class="text-muted">${nv.coBangLuong ? '<i class="fas fa-check-circle text-success"></i> Đã có' : '<i class="fas fa-exclamation-circle text-warning"></i> Chưa có'} bảng lương</div>
                                                        </div>
                                                        <div>
                                                            ${nv.coBangLuong
                                ? `<button class="btn btn-outline-primary btn-sm" data-payroll-id="${nv.maLuong}" onclick="openPayrollDetail('${nv.maLuong}')"><i class="fas fa-eye"></i> Xem</button>`
                                : `<button class="btn btn-success btn-sm" onclick="openCreateModal(${nv.maNv}, '${nv.hoTen}')"><i class="fas fa-plus"></i> Tạo</button>`}
                                                        </div>
                                                    </div>
                                                </div>`;
                    });

                    html += `</div></div>`;
                });

                $('#payrollContainer').html(html);
            });
        }

        function openCreateModal(maNv, hoTen) {
            $('#modalMaNv').val(maNv);
            $('#modalEmployeeName').text(hoTen);
            const modal = new bootstrap.Modal(document.getElementById('createPayrollModal'));
            modal.show();
        }

        function confirmCreatePayroll() {
            const maNv = $('#modalMaNv').val();
            const year = $('#yearSelect').val();
            const month = $('#monthSelect').val();

            $.post(`/api/PayrollApi/CreateOrGetPayroll?maNv=${maNv}&year=${year}&month=${month}`, function (response) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('createPayrollModal'));
                modal.hide();
                loadPayrollStatus();
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: `Đã tạo bảng lương cho nhân viên có mã ${maNv} tháng ${month}/${year}.`,
                    timer: 1500,
                    showConfirmButton: false
                });
            }).fail(function (xhr) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: xhr.responseText
                });
            });
        }

        function openPayrollDetail(maLuong) {
            $.get(`/api/PayrollApi/GetPayrollDetail/${maLuong}`, function (data) {
                $('#detailHoTen').text(data.hoTen);
                $('#detailMaNv').text(data.maNv);
                $('#detailGioiTinh').text(data.gioiTinh);
                $('#detailPhongBan').text(data.phongBan);
                $('#detailChucVu').text(data.chucVu);
                $('#detailLoaiHopDong').text(data.loaiHopDong);
                $('#detailThangNam').text(new Date(data.thangNam).toLocaleDateString('vi-VN', { month: 'long', year: 'numeric' }));
                $('#detailTenTrangThai').text(data.tenTrangThai);

                $('#detailLuongCoBan').text(data.thuNhap?.luongCoBan?.toLocaleString('vi-VN') ?? 0);
                $('#detailPhuCapCoDinh').text(data.thuNhap?.phuCapCoDinh?.toLocaleString('vi-VN') ?? 0);
                $('#detailThuongCoDinh').text(data.thuNhap?.thuongCoDinh?.toLocaleString('vi-VN') ?? 0);
                $('#detailPhuCapThem').text(data.thuNhap?.phuCapThem?.toLocaleString('vi-VN') ?? 0);
                $('#detailLuongThem').text(data.thuNhap?.luongThem?.toLocaleString('vi-VN') ?? 0);
                $('#detailLuongTangCa').text(data.thuNhap?.luongTangCa?.toLocaleString('vi-VN') ?? 0);
                $('#detailTongLuong').text(data.thuNhap?.tongLuong?.toLocaleString('vi-VN') ?? 0);

                $('#detailBHXH').text(`-${data.khauTru?.bhxh?.toLocaleString('vi-VN') ?? 0}`);
                $('#detailBHYT').text(`-${data.khauTru?.bhyt?.toLocaleString('vi-VN') ?? 0}`);
                $('#detailBHTN').text(`-${data.khauTru?.bhtn?.toLocaleString('vi-VN') ?? 0}`);
                $('#detailThueTNCN').text(`-${data.khauTru?.thueTNCN?.toLocaleString('vi-VN') ?? 0}`);
                $('#detailThucNhan').text(data.thucNhan?.toLocaleString('vi-VN') ?? 0);
                $('#detailNgayIn').text(new Date(data.ngayIn).toLocaleDateString('vi-VN'));

                // Xử lý thông tin tài khoản ngân hàng
                if (data.taiKhoanNganHang) {
                    $('#taiKhoanNganHangSection').collapse('show');
                    $('#nganHangRow').collapse('show');
                    $('#soTaiKhoanRow').collapse('show');
                    $('#detailTenNganHang').text(data.taiKhoanNganHang.tenNganHang);
                    $('#detailChiNhanh').text(data.taiKhoanNganHang.chiNhanh);
                    $('#detailSoTaiKhoan').text(data.taiKhoanNganHang.soTaiKhoan);
                } else {
                    $('#taiKhoanNganHangSection').collapse('hide');
                    $('#nganHangRow').collapse('hide');
                    $('#soTaiKhoanRow').collapse('hide');
                }

                // Xử lý ghi chú
                if (data.ghiChu) {
                    $('#ghiChuSection').collapse('show');
                    $('#detailGhiChu').text(data.ghiChu);
                } else {
                    $('#ghiChuSection').collapse('hide');
                    $('#detailGhiChu').text('');
                }

                const modal = new bootstrap.Modal(document.getElementById('viewPayrollModal'));
                modal.show();
            }).fail(function (xhr) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: xhr.responseText
                });
            });
        }
        function openCreateBulkModal() {
            const month = $('#monthSelect').val();
            const year = $('#yearSelect').val();
            $('#bulkModalMonth').text(month);
            $('#bulkModalYear').text(year);
            const modal = new bootstrap.Modal(document.getElementById('createBulkPayrollModal'));
            modal.show();
        }

        function confirmCreateBulkPayroll() {
            const year = $('#yearSelect').val();
            const month = $('#monthSelect').val();

            $.post(`/api/PayrollApi/CreateBulkPayroll?year=${year}&month=${month}`, function (response) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('createBulkPayrollModal'));
                modal.hide();
                loadPayrollStatus();
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: response,
                    timer: 1500,
                    showConfirmButton: false
                });
            }).fail(function (xhr) {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: xhr.responseText
                });
            });
        }
    </script>
}